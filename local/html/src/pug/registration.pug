extends shared/_layout
block content

  // BREADCRUMBS :: START
  .breadcrumbs
    .container
      a(href='homepage.html') Главная
      a(href='#') Моя корзина
  
  // LK :: START
  .lk
    .container

      .lk__content
        form(action="#" js-validate-form)

          h1.lk__heading Регистрация

          .lk__form
            .ui-group
              label.ui-label Имя*
              input(type="text", name="first_name", placeholder="Введите имя").ui-input
            .ui-group
              label.ui-label Фамилия*
              input(type="text", name="last_name", placeholder="Введите фамилию").ui-input
            .ui-group
              label.ui-label Название организации*
              input(type="text", name="org").ui-input
            .ui-group
              label.ui-label Телефон*
              input(type="tel", name="phone", placeholder="+7 (123) 456-78-90").ui-input
            .ui-group
              label.ui-label E-mail*
              .ui-group-content
                input(type="email", name="email", placeholder="fnozdrin@yandex.ru").ui-input
                label.ui-check
                  input(type="checkbox").ui-check__input
                  span.ui-check__checkbox
                    +icon('ico-check')
                  | Подписаться на новости и скидки
            .ui-group
              label.ui-label Адрес доставки
              textarea.ui-textarea.ui-textarea__50 Россия, Москва, Саянска ул. 11/2/291
            .ui-group
              label.ui-label Пароль*
              input(type="password", name="password", placeholder="").ui-input#password
            .ui-group
              label.ui-label Подтверждение*
              input(type="password", name="password_confirm", placeholder="").ui-input
            .ui-group
              label.ui-label Тип покупателя
              ul.ui-checklist
                li
                  label.ui-check
                    input(type="checkbox").ui-check__input
                    span.ui-check__checkbox
                      +icon('ico-check')
                    | Розничный
                li
                  label.ui-check
                    input(type="checkbox").ui-check__input
                    span.ui-check__checkbox
                      +icon('ico-check')
                    | Оптовый (требует подтверждения)
           
            .ui-group
              label.ui-label Введите код,<br>указанный на картинке
              .ui-group-content
                .ui-captcha
                  input(type="text", placeholder="CAPTCHA!").ui-captcha__input
                  figure.ui-captcha__image
                    img(src="img/img-captcha.jpg", alt="")
                label.ui-check
                    input(type="checkbox").ui-check__input
                    span.ui-check__checkbox
                      +icon('ico-check')
                    | Да, я принимаю условия работы Diway.ru

            p.ui-attention
              +icon('ico-attention')
              | Поля, отмеченные (*) обязательны для заполнения
              
            button.btn.btn-primary
              span Регистрация

            //- button(disabled).btn.btn-primary
            //-   span Регистрация
      
      .lk__left-sidebar
        
        nav.lk__nav
          ul.lk__nav-menu
            li
              a(href="#").lk__nav-link Вход
            li
              a(href="#").lk__nav-link.is-active Регистрация
            li
              a(href="#").lk__nav-link Восстановление пароля
            li
              a(href="#").lk__nav-link Моя корзина

      .lk__right-sidebar

        .adv
          .adv__item
            figure.adv__item-icon
              +icon('ico-adv-1')
            p.adv__item-text Качественное Российское производство
          .adv__item
